<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewsDetailActivity"
    android:background="@color/white"
    >
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageDetailNews"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/place_holder"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/imageDetailNews"
                android:background="#80000000">
            </View>
            <RelativeLayout
                android:id="@+id/firstLayoutDetailNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp">
                <ImageView
                    android:id="@+id/backToHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/icon_left"
                    />
                <ImageView
                    android:id="@+id/bookmarkDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_bookmark_detail"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/shareNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/firstLayoutDetailNews"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_share"/>
            <ImageView
                android:id="@+id/readAloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/shareNews"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_read"/>
            <TextView
                android:id="@+id/categoryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/titleDetailTxt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/border_tab_detail"
                style="@style/TabSelectedTextStyle"
                android:text="AI/ML"
                />
            <TextView
                android:id="@+id/titleDetailTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="350dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageDetailNews"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="50dp"
                android:text="An Interview With the Target Home Depot Hacker"
                style="@style/TitleStyle"
                android:textColor="@color/white"
                />
            <ScrollView
                android:id="@+id/scrollViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imageDetailNews"
                android:layout_marginTop="-20dp"
                android:padding="20dp"
                android:scrollbars="none"
                android:background="@drawable/border_bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pubDateDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semi_bold"
                        android:textSize="16dp"
                        android:textColor="#333647"
                        android:text="November 14, 2024"/>
                    <TextView
                        android:id="@+id/contentDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#666C8E"
                        android:textSize="16dp"
                        android:fontFamily="@font/inter_regular"
                        />
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>