<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Navigation.CategoriesFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dp"
        >
    <TextView
        android:id="@+id/titleCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TitleStyle"
        android:text="Categories"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/introCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        style="@style/ContentStyle"
        android:text="Thousands of articles in each category"
        app:layout_constraintTop_toBottomOf="@+id/titleCategories"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/introCategories"
            app:layout_constraintBottom_toBottomOf="parent"
            android:columnCount="2"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:id="@+id/AICategoryChoose"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:background="@drawable/border_catgory_item"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="🤖  AI/ML"
                    android:textColor="#666C8E"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/SoftwareCategoryChoose"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:background="@drawable/border_catgory_item"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="💡  Software"
                    android:textColor="#666C8E"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/TechCategoryChoose"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:background="@drawable/border_catgory_item"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="📱  Technology"
                    android:textColor="#666C8E"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/SecurityCategoryChoose"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:background="@drawable/border_catgory_item"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="🔐  Security"
                    android:textColor="#666C8E"
                    android:textAlignment="center"/>
            </LinearLayout>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>